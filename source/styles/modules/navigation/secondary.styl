#app .navigation.secondary
	height 100%
	a
		vertical-align top
		display inline-block
		color #fff
		font-size 9px
		font-weight 700
		text-decoration none
		padding 33px 0 0 0
		text-align center
		width 33%
		height 100%
		box-sizing border-box
		&.icon
			background-repeat no-repeat
			background-position center 7px
			background-origin padding-box
			background-size auto 25px
			&.available
				background-image url('/img/icn-openjobs.png')
			&.schedule
				background-image url('/img/icn-myschedule.png')
			&.assigned
				background-image url('/img/icn-reassigned.png')
		&.selected
			position relative
		&.selected:after
			display inline-block
			content ' '
			z-index -1
			position absolute
			top 10%
			right 5%
			bottom 10%
			left 5%
			border 0.5px solid #054a68
			border-radius 5px
			background-clip padding-box
			background-color #fff
			box-shadow inset -0.5px 0 2.5px rgba(0, 0, 0, 0.36), inset 0 0 25px rgba(1, 22, 31, 0.18)
			background-image linear-gradient(top, #02648e 0%, #0c86b2 51%, #108db7 51%, #1eb2db 100%)
		&[data-counter]
			position relative
		&[data-counter]:before
			position absolute
			top -4px
			right 17px
			content attr(data-counter)
			color #f3f3f3
			font-size 11.5px
			font-weight 700
			line-height 17px
			text-align center
			text-shadow 0 0.5px 0.5px rgba(0, 0, 1, 0.2)
			width 18px
			height 18px
			border-radius 8px / 8.5px
			background-clip padding-box
			background-color #952b2b
			box-shadow -2px 0 3px rgba(0,0,0,.76), inset 0 1px 0 rgba(255, 255, 255, 0.43)
			background-image linear-gradient(top, #b3131a 0%, #cb2027 100%)
