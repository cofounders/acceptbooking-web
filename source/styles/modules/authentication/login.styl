#app .authentication.login
	color #656565
	font-size 18px
	margin 0 15px
	> p
		margin 15px 0
	> .country
		display flex
		> input,
		> select
			appearance none
			color #656565
			border 1px solid #c7c7c7
			border-radius 5px
			border-width 1px
			box-shadow 1px 1px 2.5px -1px rgba(0, 0, 0, 0.21),
				inset 0 1px 0 #fff
			background-image linear-gradient(bottom, mix(#dadada, rgba(246, 246, 246, 0.69)) 0%, mix(#f8f8f8, rgba(246, 246, 246, 0.69)) 100%)
			&:disabled
				opacity 1
				color #656565
				box-shadow 2px 2px 2px rgba(255, 255, 255, 0.35),
					inset 1px 1px 0 rgba(0, 0, 0, 0.08)
		> [name="code"]
			flex none
			display block
			width 50px
			text-align center
			margin 0 10px 0 0
			padding 8px 5px 8px 0
		> [name="country"]
			flex 1
			display block
			padding 8px 10px
			background-image url('/img/icn-dropdown.png')
			background-repeat no-repeat
			background-position center right 10px
			background-size 9px auto
	> [name="phone"]
		border 1px solid rgba(0, 152, 220, 0.5)
		border-radius 5px
		appearance none
		text-align center
		color #656565
		font-size 30px
		font-weight 700
		margin 1em 0
		padding 3px 0
		display block
		width 100%
		background-color #fff
		box-shadow 0 0 5px #0098dc,
			inset 1px 1px 0 rgba(0, 0, 0, 0.1)
		&::-webkit-input-placeholder
			padding 5px 0
			font-size 18px
			font-style italic
			font-weight 600
			color #cdcdcd
