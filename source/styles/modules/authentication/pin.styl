#app .authentication.pin
	color #656565
	font-size 18px
	margin 0
	> p
		margin 15px 0
		text-align center
		&.phone
			font-weight 700
			font-size 30px
		&.error
			display none
			color #dc0000
		&.contact
			display none
			font-size 15px
		> a,
		> button
			appearance none
			background none
			border none
			padding 0
			font-size 15px
			font-weight 600
			display inline
			line-height normal
			vertical-align baseline
			box-sizing content-box
			color #0098dc
			text-decoration underline
	[name="pin"]
		border 1px solid rgba(0, 152, 220, 0.5)
		border-radius 5px
		appearance none
		text-align center
		color #656565
		font-size 30px
		margin 1em auto
		padding 3px 0
		font-weight 700
		display block
		width 150px
		background-color #fff
		box-shadow 0 0 5px #0098dc,
			inset 1px 1px 0 rgba(0, 0, 0, 0.1)
		&::-webkit-input-placeholder
			font-style italic
			color #cdcdcd
		&:-moz-placeholder
			font-style italic
			color #cdcdcd
		&::-moz-placeholder
			font-style italic
			color #cdcdcd
		&:-ms-input-placeholder
			font-style italic
			color #cdcdcd
	&.error
		[name="pin"]
			border 1px solid rgba(220, 0, 0, 0.5)
			box-shadow 0 0 5px #dc0000,
				inset 1px 1px 0 rgba(0, 0, 0, 0.1)
		p
			&.instructions
				display none
			&.error
				display block
			&.contact
				display block
