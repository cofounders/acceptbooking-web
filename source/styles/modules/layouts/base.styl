#app > .layout.base
	> header
		position fixed
		top 0
		left 0
		right 0
		height 45px
		background-image url('/img/header-bg.jpg')
		background-size auto 45px
	> article
		padding 45px 0 50px 0
		height 1000px
		> a
			font-weight 700
			text-decoration none
			margin 5px
			padding 10px 0 13px 0
			display block
			text-align center
			border-radius 4px
			background-color #f0f1f2
			border 0.5px solid #c5cacb
			box-shadow inset 0px 0px 2px 0px rgba(0, 0, 0, 0.1),
				0px 0.5px 0px 0px rgba(255, 255, 255, 0.8)
			color #b7b9bb
			font-size 15px
			text-shadow 0 1px rgba(255, 255, 255, 0.9)
	> footer
		position fixed
		bottom 0
		left 0
		right 0
		height 50px
		background-image url('/img/footer-bg.jpg')
		background-size auto 50px
		text-align center
		font-size 0
