#app > .layout.navigation
	> header
		position fixed
		top 0
		left 0
		right 0
		height 45px
		background-image url('/img/bg-darkpaper.png')
		background-size cover
		box-shadow 0 2px 2.5px rgba(47, 39, 29, 0.35)
		z-index 1
		transition transform .2s ease-in-out
	> article
		padding 45px 0 50px 0
		min-height 1000px
	> footer
		position fixed
		bottom 0
		left 0
		right 0
		height 50px
		background-image url('/img/bg-darkpaper.png')
		background-size cover
		text-align center
		font-size 0
		z-index 1
		transition transform .2s ease-in-out
	&.scrolling-down
		> header
			transform translateY(-55px)
		> footer
			transform translateY(55px)
