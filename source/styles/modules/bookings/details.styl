#app .bookings.details
	> section
		> div,
		> a
			display block
			border-bottom 1px solid #eee
			color #333
			box-sizing border-box
			height 100%
			width 100%
			font-size 12px
			font-weight 600
			position relative
			padding 0 0 0 40px
			line-height 40px
			&:before
				content ' '
				position absolute
				top 0
				left 0
				height 40px
				width 40px
				background-repeat no-repeat
				background-position center 11px
				background-size auto 18px
		> a
			text-decoration none
			color #0373a2
			font-weight 700
	> #map
		width 100%
		height 130px
		border-bottom 1px solid #eee
	> .passenger
		display flex
		.name
			flex 1
			display block
			border-right 1px solid #eee
			&:before
				background-image url('/img/booking-details/icn-user.png')
		.phone
			flex 1
			display block
			&:before
				background-image url('/img/booking-details/icn-phone.png')
	> .datetime
		div:before
			background-position center 8px
		div:after
			bottom 5px
			font-size 7px
			left 0
			line-height 1
			position absolute
			text-align center
			text-transform uppercase
			width 40px
		.pickup
			&:before
				background-image url('/img/booking-details/icn-time.png')
			&:after
				content 'start'
		.dropoff
			&:before
				transform scale(-1, 1)
				background-image url('/img/booking-details/icn-time.png')
			&:after
				content 'end'
	> .connection
		display none
		.train
			display none
	> .route
		> :before
			background-image url('/img/booking-details/icn-stop.png')
		> :last-of-type:before
			background-image url('/img/booking-details/icn-dropoff.png')
		> :first-of-type:before
			background-image url('/img/booking-details/icn-pickup.png')
	> .extras
		.note
			line-height 1.35
			padding-top 10px
			padding-bottom 10px
			min-height 6em
			&:before
				background-image url('/img/booking-details/icn-notes.png')
