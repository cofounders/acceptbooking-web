#app .bookings.available-map-search
	height 100%
	> header
		width 100%
		height 40px
		box-sizing border-box
		border-bottom 1px solid #c5cacb
		overflow hidden
		> form
			display flex
			width 100%
			height 100%
			> input[type='search']
				flex 1
				order 2
				font-size 12px
				font-weight 600
				color #333
				appearance none
				box-sizing border-box
				height 100%
				width 100%
				border none
				border-left 1px solid #c5cacb
				padding 0 0 0 10px
			> button
				flex none
				order 1
				width 40px
				height 40px
				background-image url('/img/map/icn-search-active.png')
				background-repeat no-repeat
				background-size 19px auto
				background-position center
				background-color white
				border none
				font-size 0
