#app .bookings.status
	display flex
	height 100%
	padding 2.5px
	box-sizing border-box
	> button
		box-sizing border-box
		margin 2.5px
		flex 1
		appearance none
		font-size 15px
		font-weight 700
		text-transform uppercase
		border-radius 5px
		border none
		box-shadow inset 1px 1px 1px rgba(255, 255, 255, 0.7),
			inset 0 0 1px #2b8399
		background-image linear-gradient(bottom, #0373a2 0%, #56cbe8 100%)
		color #fff
